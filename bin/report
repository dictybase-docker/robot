#!/bin/sh 
 

run_report() {
	REPORT_DIR=${GITHUB_WORKSPACE}/reports
	mkdir -p ${REPORT_DIR}
	for f in ${GITHUB_WORKSPACE}/ontologies/*.obo
	do
	    output=$(basename ${f} | sed 's/obo/txt/')
	    robot report --input $f --output ${REPORT_DIR}/${output} &> /dev/null
	done
}

main() {
	run_report
}

main
