#!/bin/bash 

set -xv
run_report() {
	while read -r f 
	do
	    output=$(basename ${f} | sed 's/obo/txt/')
	    robot report --input ${GITHUB_WORKSPACE}/${f} --output ${REPORT_DIR}/${output} 
	done < ${COMMIT_LIST_FILE}
}
 
run_if_commit_list() {
	if [ -e ${COMMIT_LIST_FILE} ]
	then
		run_report
	else
		echo "no changed file to report"
	fi
}
set +xv


main() {
	run_if_commit_list
}

main
